{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS", // Keep this as CommonJS
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false, // Allow output
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["main.ts", "preload.ts"] // Include your main and preload files
}

